@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";

    var juvaReportImage1 = Model?.Value<IPublishedContent>("juvaImage1");
    var juvaReportImage2 = Model?.Value<IPublishedContent>("juvaImage2");
    var juvaReportImage3 = Model?.Value<IPublishedContent>("juvaImage3");

    var teamImageFront = Model?.Value<IPublishedContent>("nextProjectImage");
    var teamImageBehind = Model?.Value<IPublishedContent>("nextProjectImageBehind");
}

 <section class="tab-location">
	<div class="container text-center">
		<h1 class="standard-heading">@Model.Value("juvaTabHeadline")</h1>
		<div class="flex">
			<p class="standard-text">@Model.Value("juvaTabText1")</p>
			<i class="fa-solid fa-angle-right"></i>
			<p class="standard-text">@Model.Value("juvaTabText2")</p>
			<i class="fa-solid fa-angle-right"></i>
			<p class="label-title">@Model.Value("juvaTabText3")</p>
		</div>
	</div>
</section>

<section class="project-juva-inc">
    <div class="container">
        <div class="project-grid">
            <div class="content-left">
                <div class="date">
                    <i class="fa-regular fa-calendar-days"></i>
                    <p>@Model.Value("date")</p>
                </div>
                <p class="text-s standard-text">@Model.Value("smallHeadline")</p>
                <img src="@juvaReportImage1?.Url()" alt="@Model.Value("juvaImage1Alt")">
                <h4 class="standard-heading">@Model.Value("headline1")</h4>
                <div class="key-point-flex">
                    <i class="fa-solid fa-circle"></i>
                    <p>@Model.Value("keyNoteText1")</p>
                </div>
                <div class="key-point-flex">
                    <i class="fa-solid fa-circle"></i>
                    <p>@Model.Value("keyNoteText2")</p>
                </div>
                <div class="key-point-flex">
                    <i class="fa-solid fa-circle"></i>
                    <p>@Model.Value("keyNoteText3")</p>
                </div>
                <div class="flex">
                    <img src="@juvaReportImage2?.Url()" alt="@Model.Value("juvaImage2Alt")">
                    <div>
                        <h4 class="standard-heading">@Model.Value("headline2")</h4>
                        <p class="standard-text">@Model.Value("headline2Text1")</p>
                        <p class="standard-text">@Model.Value("headline2Text2")</p>
                    </div>
                </div>
                <h4 class="standard-heading">@Model.Value("headline3")</h4>
                <p class="standard-text">@Model.Value("headline3Text1")</p>
                <p class="standard-text">@Model.Value("headline3Text2")</p>
                <p class="standard-text">@Model.Value("headline3Text3")</p>
                <img src="@juvaReportImage3?.Url()" alt="@Model.Value("juvaImage3Alt")">
                <h4 class="standard-heading">@Model.Value("headline4")</h4>
                <p class="standard-text">@Model.Value("headline4Text1")</p>
                <p class="standard-text">@Model.Value("headline4Text2")</p>
                <div class="report-tags">
                    <p class="text-m">@Model.Value("tagHeadline")</p>
                    <div class="juva-tags">
                        <p>@Model.Value("tagText1")</p>
                        <p>@Model.Value("tagText2")</p>
                        <p>@Model.Value("tagText3")</p>
                    </div>
                </div>
            </div>
            <div class="content-right">
                <h4 class="project-heading">@Model.Value("tagsHeadline")</h4>
                <div class="tags">
                    <p>@Model.Value("tagsText1")</p>
                    <p>@Model.Value("tagsText2")</p>
                    <p>@Model.Value("tagsText3")</p>
                    <p>@Model.Value("tagsText4")</p>
                    <p>@Model.Value("tagsText5")</p>
                    <p>@Model.Value("tagsText6")</p>
                    <p>@Model.Value("tagsText7")</p>
                    <p>@Model.Value("tagsText8")</p>
                </div>
                <div class="content-left-help">
                    <h3 class="standard-heading">@Model.Value("helpHeadline")</h3>
                    <p class="standard-text">@Model.Value("helpText")</p>
                    <div class="content-left-help-form">
                        <input type="email" class="form-last" placeholder="@Model.Value("helpFormText")" name="sector" />
                        <i class="fa-regular fa-envelope"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="next-project">
    <div class="container flex">
        <img class="guy-glasses" src="@teamImageFront?.Url()" alt="@Model.Value("nextProjectImageAlt")">
        <img src="@teamImageBehind?.Url()" alt="@Model.Value("nextProjectImageBehindAlt")">
        <div class="next-project-text">
            <h1 class="standard-heading">@Model.Value("nextProjectHeadline")</h1>
            <div class="flex">
                <i class="fa-light fa-location-dot"></i>
                <p class="standard-text">@Model.Value("nextProjectTextHeadline")</p>
            </div>
            <p class="standard-text text-s">@Model.Value("nextProjectText")</p>
                <div class="flex">
                <i class="fa-light fa-phone-flip"></i>
                <p class="standard-text">@Model.Value("nextProjectTextHeadline2")</p>
            </div>
            <p class="standard-text text-s">@Model.Value("nextProjectText2")</p>
                <div class="flex">
                <i class="fa-light fa-envelope"></i>
                <p class="standard-text">@Model.Value("nextProjectTextHeadline3")</p>
            </div>
            <p class="standard-text text-s">@Model.Value("nextProjectText3")</p>
        </div>
    </div>
</section>