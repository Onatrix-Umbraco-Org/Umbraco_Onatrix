@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";

    var serviceImage1 = Model?.Value<IPublishedContent>("serviceCard1Image");
    var serviceImage2 = Model?.Value<IPublishedContent>("serviceCard2Image");
    var serviceImage3 = Model?.Value<IPublishedContent>("serviceCard3Image");
    var serviceImage4 = Model?.Value<IPublishedContent>("serviceCard4Image");
    var serviceImage5 = Model?.Value<IPublishedContent>("serviceCard5Image");
    var serviceImage6 = Model?.Value<IPublishedContent>("serviceCard6Image");

    var teamImageFront = Model?.Value<IPublishedContent>("nextProjectImage");
    var teamImageBehind = Model?.Value<IPublishedContent>("nextProjectImageBehind");
}

 <section class="tab-location">
	<div class="container text-center">
        <h1 class="standard-heading">@Model.Value("serviceTabHeadline")</h1>
        <div class="flex">
            <p class="standard-text">@Model.Value("serviceTabText")</p>
            <i class="fa-solid fa-angle-right"></i>
            <p class="label-title">@Model.Value("serviceTabText2")</p>
        </div>
	</div>
</section>

 <section class="our-service-wrapper services-background">
	<div class="container">
		<div class="text-center">
            <h1 class="standard-heading">@Model.Value("serviceHeadline")</h1>
        </div>
        <div class="grid-services">
            <a href="@Model.Value("serviceCard1Url")" class="grid-card">
                <h3 class="standard-heading">@Model.Value("serviceCard1Headline")</h3>
                <img src="@serviceImage1?.Url()" alt="@Model.Value("serviceCard1ImageAlt")">
                <p class="standard-text">@Model.Value("serviceCard1Text")</p>
            </a> 
            <div class="grid-card">
                <h3 class="standard-heading">@Model.Value("serviceCard2Headline")</h3>
                <img src="@serviceImage2?.Url()" alt="@Model.Value("serviceCard2ImageAlt")">
                <p class="standard-text">@Model.Value("serviceCard2Text")</p>
            </div>
            <div class="grid-card">
                <h3 class="standard-heading">@Model.Value("serviceCard3Headline")</h3>
                <img src="@serviceImage3?.Url()" alt="@Model.Value("serviceCard3ImageAlt")">
                <p class="standard-text">@Model.Value("serviceCard3Text")</p>
            </div>
            <div class="grid-card">
                <h3 class="standard-heading">@Model.Value("serviceCard4Headline")</h3>
                <img src="@serviceImage4?.Url()" alt="@Model.Value("serviceCard4ImageAlt")">
                <p class="standard-text">@Model.Value("serviceCard4Text")</p>
            </div>
            <div class="grid-card">
                <h3 class="standard-heading">@Model.Value("serviceCard5Headline")</h3>
                <img src="@serviceImage5?.Url()" alt="@Model.Value("serviceCard5ImageAlt")">
                <p class="standard-text">@Model.Value("serviceCard5Text")</p>
            </div>
            <div class="grid-card">
                <h3 class="standard-heading">@Model.Value("serviceCard6Headline")</h3>
                <img src="@serviceImage6?.Url()" alt="@Model.Value("serviceCard6ImageAlt")">
                <p class="standard-text">@Model.Value("serviceCard6Text")</p>
            </div>
        </div>
		<div class="change-page">
			<p class="change-page-text text-l">@Model.Value("servicesTabChangeText1")</p>
			<p class="change-page-number active">@Model.Value("servicesTabChangeText2")</p>
			<p class="change-page-number">@Model.Value("servicesTabChangeText3")</p>
			<p class="change-page-text">@Model.Value("servicesTabChangeText4")</p>
		</div>
	</div>
</section>

<section class="next-project">
    <div class="container flex">
        <img class="guy-glasses" src="@teamImageFront?.Url()" alt="@Model.Value("nextProjectImageAlt")">
        <img src="@teamImageBehind?.Url()" alt="@Model.Value("nextProjectImageBehindAlt")">
        <div class="next-project-text">
            <h1 class="standard-heading">@Model.Value("nextProjectHeadline")</h1>
            <div class="flex">
                <i class="fa-light fa-location-dot"></i>
                <p class="standard-text">@Model.Value("nextProjectTextHeadline")</p>
            </div>
            <p class="standard-text text-s">@Model.Value("nextProjectText")</p>
                <div class="flex">
                <i class="fa-light fa-phone-flip"></i>
                <p class="standard-text">@Model.Value("nextProjectTextHeadline2")</p>
            </div>
            <p class="standard-text text-s">@Model.Value("nextProjectText2")</p>
                <div class="flex">
                <i class="fa-light fa-envelope"></i>
                <p class="standard-text">@Model.Value("nextProjectTextHeadline3")</p>
            </div>
            <p class="standard-text text-s">@Model.Value("nextProjectText3")</p>
        </div>
    </div>
</section>

