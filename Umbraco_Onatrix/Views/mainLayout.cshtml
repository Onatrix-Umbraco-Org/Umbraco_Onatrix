@using Umbraco.Cms.Core
@using Umbraco.Cms.Core.PublishedCache
@using Umbraco.Cms.Core.Models.PublishedContent
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject IPublishedContentQuery ContentQuery

@{
    Layout = null;
    var layoutNode = ContentQuery.ContentAtRoot().FirstOrDefault(x => x.Name() == "Main-Layout");
    var logo = layoutNode?.Value<IPublishedContent>("headerLogo");
}

<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="css/main.css">
    <title>Onatrix</title>
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="navbar-top-wrapper">
                <div class="container navbar-top">
                    <p class="nav-text-top">@layoutNode?.Value("headerTopText")</p>
                    <div class="social-icons">
                        <a href="@layoutNode?.Value("headerTopLink1")" target="_blank"><i class="fa-brands fa-facebook-f"></i></a>
                        <a href="@layoutNode?.Value("headerTopLink2")" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                        <a href="@layoutNode?.Value("headerTopLink3")" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <div class="container main-navbar">
                <a href="@layoutNode?.Value("headerLogoUrl")">
                    <img src="@(logo?.Url())" alt="Company Logo">
                </a>
                <nav class="main-nav standard-heading text-xl">
                    <a href="@layoutNode?.Value("headerBottomLink1Url")">@layoutNode?.Value("headerBottomLink1Text")</a>
                    <a href="@layoutNode?.Value("headerBottomLink2Url")">@layoutNode?.Value("headerBottomLink2Text")</a>
                    <a href="@layoutNode?.Value("headerBottomLink3Url")">@layoutNode?.Value("headerBottomLink3Text")</a>
                    <a href="@layoutNode?.Value("headerBottomLink4Url")">@layoutNode?.Value("headerBottomLink4Text")</a>
                </nav>
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </header>
        <main>
            @RenderBody()
        </main>
        <footer>
            <div class="footer-wrapper">
                <p class="container standard-text">
                    @layoutNode?.Value("footerText")
                    <a href="#" class="label-title">@layoutNode?.Value("footerLinkText")</a>
                </p>
            </div>
        </footer>
    </div>
</body>
</html>